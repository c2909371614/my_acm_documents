#include <bits/stdc++.h>
using namespace std;
#define ll long long
const int N = 1e5 + 5;
ll a[N];//define a[]

int main() {
	int t;
	cin>>t;
	string s;
	while(t--) {
		cin>>s;
		int icount=1;// 从已开始，为了与i区别
		for(int i=0; i<=s.size(); i++)
			a[i]=0;//将需要的清零
		for(int i=0; i<s.size()-1; i++) {
			if(s[i]=='w'&&s[i+1]=='c') {
				a[icount++]=i+1;
			}
		}
		a[icount]=s.size();
		ll ans=0;
		for(int i=1; i<=icount-1; i++) {
			ans+=(a[i]-a[i-1])*(a[i+1]-a[i]);
		}
		cout<<ans<<endl;
	}
	return 0;
}
